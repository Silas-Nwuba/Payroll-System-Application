@model EmployeeDetailsViewModel
<div class="container">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Home</a></li>
                            <li class="breadcrumb-item"><a asp-action="index" asp-controller="Employee">Employee List</a></li>
                            <li class="breadcrumb-item">Employee Details</li>
                        </ol>

                    </nav>
                </div>
                <br /><br />
                <div class="wrap d-flex justify-content-start justify-content-sm-center flex-wrap">
                    <img class="rounded-circle" style="width:300px;height:330px" src="@Url.Content(Model.ImageUrl)" alt="Image" />
                    <div class="wrap align-items-center ml-5">
                        <p class="font-weight-bold text-uppercase text-success"> @Model.FullName</p>
                        <p class="font-weight-normal">Employee No : @Model.EmployeeNo</p>
                        <p class="font-weight-normal">Role : @Model.Designation</p>
                        <p class="font-weight-normal">NI No : @Model.NationalInsuranceNumber</p>
                        <p class="font-weight-normal">Gender: @Model.Gender</p>
                        <p class="font-weight-normal">Date of birth:@Model.DoB.ToString("dd/mm/yyyy")</p>
                        <p class="font-weight-normal">Phone :<a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a></p>
                        <p class="font-weight-normal">Email : <a href="#">@Model.Email</a></p><br /><br />

                        <h4>Pay And Deduction</h4>
                        <hr style="background-color:darkred" />
                        <p class="font-weight-normal"> Payment Method : @Model.PaymentMethod</p>
                        <p class="font-weight-normal"> Union Member : @Model.UnionMember</p>
                        <p class="font-weight-normal"> Student Laon : @Model.StudentLoanPayment</p>
                        <p class="font-weight-normal"><a href="malito:@Model.Email?Subject-Payslip&body-Attached within is your payslip"><i class="fa fa-envelope">Payslip</i></a></p>
                       <br /><br />
                        <h4>Address</h4>
                        <hr style="background-color:darkred" />
                        <p class="font-weight-normal">Address : @Model.Address</p>
                        <p class="font-weight-normal">City : @Model.City</p>
                        <p class="font-weight-normal">Post code : @Model.PostCode</p>

                    </div>
                </div>
                <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            </div>
        </div>
    </div>

