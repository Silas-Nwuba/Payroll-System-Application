@model PaymentRecordCreateViewModel
@{
    ViewBag.Title = "New Pay";
}
<div class="container">
    <div class="col-12 grid-margin-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li class="breadcrumb-item" aria-current="page">New Pay</li>
                    </ol>
                </nav>
                <br /><br />
                <form method="post" enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">

                       <select  asp-for="EmployeeId" asp-items=" ViewBag.EmployeeId" class="form-control">
                            <option selected>Select Employee</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div><br /><br />

                    <div class="form-row">
                        <div class="form-group col-md-1">
                            <label asp-for="TaskYearId"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <select asp-for="TaskYearId" asp-items="ViewBag.TaxYearId" class="form-control">
                                <option selected>Select Tax Year</option>
                            </select>
                            <span asp-validation-for="TaskYearId" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group col-md-1">
                            <label asp-for="PaymentDay"></label>
                        </div>
                        <div class="form-group col-md-3">
                            <input asp-for="PaymentDay" class="form-control" />
                            <span asp-validation-for="PaymentDay" class="text-danger"></span>
                        </div>
                      
                        <div class="form-group-col-md-1">
                            <label asp-for="PaymentMonth"></label>
                        </div>
                        <div class="form-group-col-md-3">
                            <select asp-for="PaymentMonth" class="form-control">
                                <option selected>Select Month</option>
                                <option>January</option>
                                <option>Febuary</option>
                                <option>March</option>
                                <option>April</option>
                                <option>May</option>
                                <option>June</option>
                                <option>July</option>
                                <option>August</option>
                                <option>September</option>
                                <option>Octobar</option>
                                <option>Novermber</option>
                                <option>December</option>

                            </select>
                            <span asp-validation-for="PaymentMonth" class="text-danger"></span>
                        </div>
                      
                        <div class="form-row">
                            <div class="form-group col-md-1">
                                <label asp-for="HourlyWorked"></label>
                            </div>
                            <div class="form-group col-md-3">
                                <input asp-for=" HourlyWorked" class="form-control" />
                                <span asp-validation-for="HourlyWorked" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group col-md-1">
                                <label asp-for="HourlyRate"></label>
                            </div>
                            <div class="form-group col-md-3">
                                <input asp-for=" HourlyRate" class="form-control" />
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group col-md-1">
                                <label asp-for="ContratualHour"></label>
                            </div>
                            <div class="form-group col-md-3">
                                <input asp-for=" ContratualHour" class="form-control" readonly style="background-color:#293043" />

                            </div>
                        </div>
                    </div><br /><br />
                    <div class="form-group">
                        <button type="submit" class="btn btn-rounded float-left btn btn-primary"><i class="fa fa-save"><l style="margin-left:7px">Save</l></i></button>
                        <a class="btn btn-rounded btn btn-success float-right" asp-action="Index" asp-controller="PaymentRecord"><i class="fa-solid fa-backward"><l style="margin-left:7px">Back</l></i></a>
                    </div>
                </form>

            </div>
            <br /><br /><br /><br /><br /> 
        </div>

    </div>
</div>
@section Scripts{ 
@{await (Html.RenderPartialAsync("_ValidationScriptsPartial"));
}
}
